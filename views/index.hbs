<section class="indexSection">
    {{#if ongoingChallenges}}
            <h4>Current challenges</h4>
            {{#each ongoingChallenges}}
            <div class="card" style="width: 20rem;">
                <div class="card-body">
                    <div>
                        <span class="badge secondary">{{game.name}}</span>
                        <span class="badge warning">{{league.name}}</span>
                        <span class="badge danger">{{stake}}xðŸ’°</span>
                        <span class="badge success">{{createdAt}}</span>
                        <p></p>
                    </div>
                    <h6 class="card-subtitle">
                        {{#each contenders}}
                            {{username}} |
                        {{/each}}</h6>
                    <a href="/challenge/update/{{_id}}" class="paper-btn">Gameover ?</a>
                </div>
            </div>
            {{/each}}
    {{/if}}
    {{#if hasNoLeague}}
    <h4>Don't have a league yet ? </h4>
    <div class="row">
        <a href="/leagues/create" class="paper-btn">Create a league</a>
    </div>
    <div class="row">
        <a href="/leagues/join" class="paper-btn">Join a league</a>
    </div>
    {{/if}}
    <h4>How good are you?</h4>
    <div class="row">
        <a href="/boards/main" class="paper-btn">Leader Board</a>
    </div>
    <h4>Challenges</h4>
    <div class="row">
        <a href="/challenge/create" class="paper-btn">Create a challenge</a>
    </div>
    <div class="row">
        <a href="/challenge/list" class="paper-btn">List of Challenges</a>
    </div>
    

    <h4>Customize stuffs</h4>
    <div class="row">
        <a href="/games" class="paper-btn">List of games</a>
        <a href="/leagues" class="paper-btn">List of leagues</a>
    </div>
</section>