<form action="/challenge/edit/{{challenge.id}}" method="POST">
  <label for="challengeID">
    <input hidden type="text" name="challengeID" id="challengeID" value="{{challenge.id}}">
  </label>

  <div>
    <span class="badge secondary">{{challenge.game.name}}</span>
    <span class="badge warning">{{challenge.league.name}}</span>
    <span class="badge danger">stake {{challenge.stake}}</span>
    <p></p>
  </div>

  <label> Who won?
      <select name="winners" multiple>
        {{#each contenders}}
            <option selected value="{{id}}">{{username}}</option>
        {{/each}}
      </select>
  </label>
  <p></p>

  <label> Are You Done?
    {{#if challenge.isCompleted}}
      <input type="checkbox" name="isCompleted" checked>
    {{else}}
      <input type="checkbox" name="isCompleted">
    {{/if}}
  </label>
    <p></p>


  <button type="submit">Close Your Challenge</button>
</form>

{{#if errorMessage}}
   {{errorMessage}}
{{/if}}
